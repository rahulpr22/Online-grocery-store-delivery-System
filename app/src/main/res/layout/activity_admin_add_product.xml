<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="#ffb001"
    tools:context=".AdminAddProduct">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Image to Upload"
        android:fontFamily="@font/amaranth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:id="@+id/texttemp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/texttemp"
        android:src="@drawable/icon" />
    <EditText
        android:id="@+id/name"
        android:background="@drawable/box"
        android:layout_width="354dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/image"
        android:hint="Title" />

    <EditText
        android:id="@+id/desc"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:background="@drawable/box"
        android:layout_width="354dp"
        android:layout_height="40dp"
        android:fontFamily="@font/amaranth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:hint="description" />
    <EditText
        android:id="@+id/catid"
        android:paddingLeft="10dp"
        android:background="@drawable/box"
        android:layout_width="354dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/desc"
        android:fontFamily="@font/amaranth"
        android:hint="category id" />

    <EditText
        android:id="@+id/price"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:layout_width="354dp"
        android:background="@drawable/box"
        android:layout_height="40dp"
        android:fontFamily="@font/amaranth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/catid"
        android:hint="Price in Rs" />
    


    <Button
        android:id="@+id/btn_upload"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_red_dark"
        android:text="Add product"
        android:layout_below="@+id/price"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_upload"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\tCategory Id\n\n 1.Fruits and Vegetables\n 2.Meat\n 3.Packed food, Snacks, drinks\n 4.Household items\n 5.Dairy products"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_bg"
        android:textColor="@color/black"/>
</RelativeLayout>