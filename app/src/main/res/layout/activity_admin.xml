<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/box"
    android:backgroundTint="#ffb001"
    tools:context=".AdminActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Admin Page"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amaranth"
        android:textSize="18sp"
        android:id="@+id/admintitle"
        android:background="@drawable/box"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:clickable="true"

        android:text="Monitor Order Delivery"
        android:background="@drawable/text_bg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/amaranth"
        android:layout_below="@id/admintitle"
        android:id="@+id/monitortracking"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Add Product"
        android:clickable="true"

        android:background="@drawable/text_bg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/amaranth"
        android:layout_below="@id/monitortracking"
        android:id="@+id/addproduct"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Add User"
        android:clickable="true"
        android:background="@drawable/text_bg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/amaranth"
        android:layout_below="@id/addproduct"
        android:id="@+id/adduser"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="150dp"
        android:clickable="true"
        android:layout_height="60dp"
        android:text="  Signout"
        android:drawableLeft="@drawable/signout"
        android:background="@drawable/text_bg"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/amaranth"
        android:id="@+id/adminSignout"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center|left"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"/>

</RelativeLayout>